---
import Social from "./social.astro";

const platform = "github";
const username = "ryanyogan";
---

<footer>
  <p>
    Learn more about my projects on <a
      href={`https://www.${platform}.com/${username}`}>{platform}</a
    >
  </p>
  <Social platform="twitter" username="ryanyogan" />
  <Social platform="github" username="ryanyogan" />
  <Social platform="youtube" username="ryanyogan" />
</footer>

<style>
  footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>
